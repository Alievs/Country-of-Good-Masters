{% extends 'base.html.twig' %}

{% block body %}

    <!-- Page Content -->
    <div class="container">


        {% for meassage in app.flashes('success') %}
            {#added in paymentcontroller#}
            <div class="center-lister mt-2">
                <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3 text-center ">
                    <div id="charge-message" class="alert alert-success">
                        {{ meassage }}
                    </div>
                </div>
            </div>
        {% endfor %}
        <!-- Category -->
        <div class="row">

            <div class="col-lg-3">

                <div class="list-group my-4">
                    <a href="{{ path('catalog_all') }}" class="list-group-item text-center">All</a>
                    {% for category in categories %}
                        <a href="{{ path('categories', {name: category.name}) }}"
                           class="list-group-item text-center">{{ category.name }}</a>
                    {% endfor %}
                </div>

            </div>
            <!-- /.col-lg-3 -->

            <div class="col-lg-9">

                <!-- Products -->

                <div class="row my-4">
                    {% for product in product_pager.currentPageResults %}
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <a href="{{ path('product', {name: product.category.name, link: product.link}) }}">
                                    <div class="product-photo">
                                        <img class="card-img-top"
                                             src="{{ asset(product.mainImage| product_image_path | imagine_filter('thumb_product')) }}"
                                             alt="">
                                    </div>
                                </a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a href="{{ path('product', {name: product.category.name, link: product.link}) }}">{{ product.name }}</a>
                                    </h4>
                                    <h5>${{ product.unitPrice }}</h5>
                                    <p class="card-text text-hiden">{{ product.description }}</p>
                                </div>
                                <div class="card-footer">
                                    <a href="#" type="button" class="btn btn-success float-right js-add-product"
                                       data-url="{{ path('cart_add', {id: product.id}) }}">Buy</a>
                                </div>
                            </div>
                        </div>

                    {% endfor %}

                </div>
                <!-- /.row -->
                <div class="pagerfanta center-lister">
                    {{ pagerfanta(product_pager, 'twitter_bootstrap4') }}
                </div>
            </div>
            <!-- /.col-lg-9 -->

        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/cart.js') }}"></script>
{% endblock %}