                                        {% if viewProduct.item.id in app.session.get('compare').items|keys %}
                                            {% set card_btn_comp = 'active js-comp' %}
                                        {% else %}
                                            {% set card_btn_comp = 'js-compare-product' %}
                                        {% endif %}
