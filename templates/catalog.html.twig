{% extends 'base.html.twig' %}


{% block body %}

    <!-- Page Content -->
    <div class="container">


        <!-- Category -->
        <div class="row">

            <div class="col-lg-3">

                <div class="list-group my-4">
                    {% for category in categorys %}
                        <a href="#" class="list-group-item text-center">{{ category.name }}</a>
                    {% endfor %}
                </div>

            </div>
            <!-- /.col-lg-3 -->

            <div class="col-lg-9">

                <!-- Products -->

                <div class="row my-4">
                    {% for product in product_pager.currentPageResults %}
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <a href="{{ path('product', { link: product.link}) }}">
                                    <div class="product-photo">
                                        <img class="card-img-top" src="{{ asset(product.imageName| product_image_path | imagine_filter('thumb_product')) }}" alt="">
                                    </div>
                                </a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a href="{{ path('product', {link: product.link}) }}">{{ product.name }}</a>
                                    </h4>
                                    <h5>${{ product.unitPrice }}</h5>
                                    <p class="card-text text-hiden">{{ product.description }}</p>
                                </div>
                                <div class="card-footer">
                                </div>
                            </div>
                        </div>

                    {% endfor %}

                </div>
                <!-- /.row -->
                <div class="pagerfanta">
                    {{ pagerfanta(product_pager, 'twitter_bootstrap4') }}
                </div>
            </div>
            <!-- /.col-lg-9 -->

        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->

{% endblock %}
