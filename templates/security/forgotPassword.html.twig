{% extends 'base3-category.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block body %}
    {{ form_start(forgotPasswordForm, {'method': 'post', 'attr': {'class': 'register-form'}}) }}
    <div id="dark"></div>
    <div class="container-context">
    <!-- BEGIN REGISTRATION FORM -->
    <div class="form-register">
    <h1 class="text-top">Забули пароль?</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning">
                {{ message }}
            </div>
        {% endfor %}
        {{ form_start(forgotPasswordForm, {'method': 'post', 'attr': {'class': 'register-form'}}) }}
        <p>Для відновлення пароля вкажіть свій e-mail</p>
        <div class="form-group-email fpassword">
            <label id="icon" for="inpEmail"><i class="fas fa-envelope"></i></label>
            {{ form_widget(forgotPasswordForm.email, { 'attr': {'class': 'form-input-email', 'id': 'inpEmail', 'placeholder': "Електронна пошта* ", 'type': 'email', 'multiple': 'multiple'} }) }}
        </div>
        <div class="form-group-email fpassword form-btn-link">
            <button class="btn-login-main" type="submit">Нагадати пароль</button>
            <a class="register-link link-reg" href="{{ path('app_login') }}">Я згадав свій пароль</a>
        </div>
        {{ form_rest(forgotPasswordForm) }}
        {{ form_end(forgotPasswordForm) }}
    </div>
    </div>
{% endblock %}