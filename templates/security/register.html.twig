{% extends 'base3-category.html.twig' %}

{% form_theme registrationForm _self %}
{% block _user_registration_form_agreeTerms_row %}

    <div class="checkbox-form">
        <label>
            <input type="checkbox" name="{{ full_name }}" required> Я прочитав <a href="{{ path('app_privacy_policy') }}">Політика конфіденційності</a> і згоден з умовами
        </label>
        <span class="help-register">{{ form_errors(form) }}</span>
    </div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login_register.css') }}">
{% endblock %}

{% block title %}Реєстрація{% endblock %}

{% block body %}
    <div id="dark"></div>
    <div class="container">
        <!-- BEGIN REGISTRATION FORM -->
        <div class="register-body">
            {{ form_start(registrationForm, {'method': 'post', 'attr': {'class': 'register-form', 'novalidate': "novalidate"}}) }}
            {#novalidate= "novalidate"#}

            <div class="form-group">
                <label class="form-label" for="inpName">Iм'я</label>
                {{ form_widget(registrationForm.name, { 'attr': {'class': 'form-input', 'id': 'inpName'} }) }}
                {% for errorItem in registrationForm.name.vars.errors %}
                <span class="help-register">{{ errorItem.message }}</span>
                {% endfor %}
            </div>
            <div class="form-group">
                <label class="form-label" for="inpEmail">Эл. почта</label>
                {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-input', 'id': 'inpEmail'} }) }}
                {% for errorItem in registrationForm.email.vars.errors %}
                <span class="help-register">{{ errorItem.message }}</span>
                {% endfor %}
            </div>
            <div class="form-group">
                <label class="form-label" for="inpPassword">Пароль (мінімум 6 символів)</label>
                {{ form_widget(registrationForm.plainPassword.first, { 'attr': {'class': 'form-input', 'id': 'inpPassword'} }) }}
                {% for errorItem in registrationForm.plainPassword.first.vars.errors %}
                    <span class="help-register">{{ errorItem.message }}</span>
                {% endfor %}
            </div>
            <div class="form-group">
                <label class="form-label" for="inpRepPassword">Підтвердження пароля</label>
                {{ form_widget(registrationForm.plainPassword.second, { 'attr': {'class': 'form-input', 'id': 'inpRepPassword'} }) }}
                {% for errorItem in registrationForm.plainPassword.second.vars.errors %}
                    <span class="help-register">{{ errorItem.message }}</span>
                {% endfor %}
            </div>
            <div class="form-group check-terms">
                {{ form_row(registrationForm.agreeTerms) }}
            </div>
            <button type="submit" class="btn-register">Реєстрація</button>
            {{ form_rest(registrationForm) }}
            {{ form_end(registrationForm) }}
        </div>
    </div>
    <!-- END REGISTRATION FORM -->
{% endblock %}

{% block footer %}
{% endblock %}